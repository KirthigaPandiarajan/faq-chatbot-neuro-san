network {
  name = "faq_network"

  llm {
    provider = "openai"
    model = "gpt-4o-mini"
    temperature = 0.2
  }

  agents {
    faq_agent {
      type = "llm"
      prompt = """
      You are a customer support FAQ chatbot.

      Answer strictly using the FAQ data below.
      If the answer is not present, say "I don't have that information."

      FAQ DATA:
      {{faq_data}}

      Conversation History:
      {{history}}

      User Question:
      {{question}}
      """
    }
  }

  entry_agent = "faq_agent"
}
